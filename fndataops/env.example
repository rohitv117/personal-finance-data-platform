# Personal Finance Data Platform Environment Variables

# Database Configuration
POSTGRES_DB=finops
POSTGRES_USER=finops_user
POSTGRES_PASSWORD=finops_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__CORE__LOAD_EXAMPLES=false

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# DuckDB Configuration
DUCKDB_PATH=./warehouse/duckdb/finops.duckdb

# Data Quality Configuration
GREAT_EXPECTATIONS_CONFIG_PATH=./warehouse/great_expectations
SLACK_WEBHOOK_URL=

# Privacy and Security
REDACT_PII=true
MERCHANT_HASHING_ENABLED=true
MERCHANT_HASH_SALT=finops_salt_2024

# Performance Configuration
BATCH_SIZE=1000
MAX_WORKERS=4
CHUNK_SIZE=10000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/finops.log

# Monitoring Configuration
METRICS_ENABLED=true
ALERTING_ENABLED=false
SLACK_NOTIFICATIONS=false

# Development Configuration
DEBUG=false
DEMO_MODE=true
SYNTHETIC_DATA_SIZE=50000 